{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ]
  },
  "exclude": [
    "tests",
    "node_modules"
  ]
}
